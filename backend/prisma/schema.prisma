generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  passwordHash String
  salt         String        @default("")
  name         String?
  avatar       String?
  createdAt    DateTime      @default(now())

  calendars      Calendar[]
  friendships    Friendship[]    @relation("User1")
  friendships2   Friendship[]    @relation("User2")
  calendarShares CalendarShare[] @relation("SharedWith")
  settings       UserSettings?
  isAdmin  Boolean  @default(false)
}

model AppSettings {
  id                String  @id @default("global")
  registrationsOpen Boolean @default(true)
  inviteOnly        Boolean @default(false)
  updatedAt         DateTime @updatedAt
}

model UserSettings {
  id                     String @id @default(uuid())
  userId                 String @unique
  user                   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  defaultSharePermission String @default("full")
  firstDayOfWeek         String @default("monday")
}

model InviteCode {
  id        String    @id @default(uuid())
  code      String    @unique
  createdBy String
  usedBy    String?
  usedAt    DateTime?
  createdAt DateTime  @default(now())
}

model Calendar {
  id           String    @id @default(cuid())
  userId       String
  name         String
  type         String    // "ics_url" | "google" | "apple" etc.
  url          String?
  config       Json      @default("{}")
  syncInterval Int       @default(60)   // minutes, 0 = manual only
  lastSync     DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user   User            @relation(fields: [userId], references: [id])
  events Event[]
  shares CalendarShare[]
}

model CalendarShare {
  id           String   @id @default(uuid())
  calendarId   String
  calendar     Calendar @relation(fields: [calendarId], references: [id], onDelete: Cascade)
  sharedWithId String
  sharedWith   User     @relation("SharedWith", fields: [sharedWithId], references: [id], onDelete: Cascade)
  permission   String   @default("full")  // "busy" | "titles" | "full"
  createdAt    DateTime @default(now())

  @@unique([calendarId, sharedWithId])
  @@index([sharedWithId])
}

model Event {
  id          String   @id @default(cuid())
  calendarId  String
  externalId  String?
  title       String
  description String?
  location    String?
  startTime   DateTime
  endTime     DateTime
  allDay      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  calendar Calendar @relation(fields: [calendarId], references: [id])

  @@unique([calendarId, externalId])
}

model Friendship {
  id        String   @id @default(uuid())
  user1Id   String
  user1     User     @relation("User1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2Id   String
  user2     User     @relation("User2", fields: [user2Id], references: [id], onDelete: Cascade)
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  sharedCalendars Boolean @default(false)
  
  @@unique([user1Id, user2Id])
  @@index([user1Id])
  @@index([user2Id])
}
